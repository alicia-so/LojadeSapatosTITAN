{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h3>Editar produto:</h3>
<div class="card">
  <div class="card-body"></div>
  <form action="/admin/produtos/edit" method="POST">
    <input type="hidden" name="id" value="{{produto._id}}">
    <label for="nome">Nome</label>
    <input class="form-control" type="text" id="nome" name="nome" placeholder="nome do produto"
      value="{{ produto.nome }}">
      
    <label for="preco">Pre√ßo</label>
    <input class="form-control" type="number" step="any" name="preco" id="preco" placeholder="preco do produto"
      value="{{ produto.preco }}">

    <label for="quantEstoque">Quantidade</label>
    <input class="form-control" type="number" name="quantEstoque" id="quantEstoque" placeholder="Quantidade que deseja adicionar" value="{{ produto.quantEstoque }}">

    <label for="categoria">Selecione a categoria</label>
    <select name="categoria" id="categoria">
      {{#each categorias}}
      <option value="{{this}}">{{this}}</option>
      {{/each}}
    </select>

    <label for="marca">Selecione a marca</label>
    <select name="marca" id="marca">
      {{#each marcas}}
      <option value="{{this}}">{{this}}</option>
      {{/each}}
    </select>

    <br>
    <button type="submit" class="btn btn-info"> Editar produto</button>
  </form>

</div>