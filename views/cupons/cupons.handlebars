<h2>Lista de Cupons Disponiveis:</h2>
<hr>


{{#each cupons}}
        <div class="card">
            <div class="card-body">
                <h4>Nome: {{ nome }}</h4>
                <h4>Desconto: {{ desconto }} R$</h4>
                <form action="/admin/cupons/deletar" method="POST">
                    <input type="hidden" name="id" value="{{_id}}">
                </form>
            </div>
        </div>
{{else}}
    <h4>Nenhum cupom registrado</h4>
{{/each}}

<a href="http://localhost:8088/usuarios/produtos"><button class="btn btn-info m-4">voltar para produtos</button></a>
